@model NationalAttributeUpdateDto
<style>
    .table-title {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 15px 40px;
        background-color: #435d7d !important;
    }

        .table-title .title {
            font-weight: 700;
        }

        .table-title span {
            font-weight: 300;
        }

    .create-btn {
        width: 110px;
    }

</style>
<div class="container-fluid">
    <div class="table-title text-white  d-block d-sm-flex">
        <div>
            <h1 class="title">National Atributes <span>@ViewData["Title"]</span></h1>
        </div>
        <div>
            <a class="btn btn-success create-btn" style="min-width:150px !important;" asp-action="Index">Back to List</a>
        </div>
    </div>

    <form method="post" class="row" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group col-lg-7 col-xl-8">
            <label asp-for="InfoStart" class="control-label"></label>
            <textarea id="InfoMiddle" asp-for="InfoStart" class="form-control"></textarea>
            <span asp-validation-for="InfoStart" class="text-danger"></span>
        </div>
        <div class="form-group col-lg-7 col-xl-8">
            <label asp-for="InfoMiddle" class="control-label"></label>
            <textarea id="InfoMiddle" asp-for="InfoMiddle" class="form-control"></textarea>
            <span asp-validation-for="InfoMiddle" class="text-danger"></span>
        </div> <div class="form-group col-lg-7 col-xl-8">
            <label asp-for="InfoEnd" class="control-label"></label>
            <textarea id="InfoEnd" asp-for="InfoEnd" class="form-control"></textarea>
            <span asp-validation-for="InfoEnd" class="text-danger"></span>
        </div>


        <div class="form-group col-lg-7 col-xl-8 ">
            <input type="submit" value="Update" class="btn btn-primary" />
        </div>
    </form>


</div>
@section Scripts{
    <script src="~/ckeditor/styles.js"></script>
    <script src="~/ckeditor/ckeditor.js"></script>

    <script type="text/javascript">
        CKEDITOR.replace('InfoStart')
        CKEDITOR.replace('InfoMiddle')
        CKEDITOR.replace('InfoEnd')
    </script>
}
@{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}