@model ReferendumCreateDto
@{
    var selectList = (SelectList)ViewData["decisions"];
}
<div class="container-fluid">
    <div class="table-title text-white  d-block d-sm-flex">
        <div>
            <h1 class="title">Sub Decision<span>@ViewData["Title"]</span></h1>
        </div>
        <div>
            <a class="btn btn-success create-btn" style="min-width:150px !important;" asp-action="Index">Back to List</a>
        </div>
    </div>

    <form method="post" class="row" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group col-lg-7 col-xl-8 ">
            <label asp-for="Title" class="control-label"></label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="form-group col-lg-7 col-xl-8 ">
            <label asp-for="DecisionId" class="control-label">Decision</label>
            <select asp-for="DecisionId" asp-items="@selectList"> </select>
            <span asp-validation-for="DecisionId" class="text-danger"></span>
        </div>
        <div class="form-group col-lg-7 col-xl-8 ">
            <label asp-for="Pdf" class="control-label"></label>
            <input asp-for="Pdf" class="form-control" />
            <span asp-validation-for="Pdf" class="text-danger"></span>
        </div>
       


        <div class="form-group col-lg-7 col-xl-8 ">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </form>


</div>

@{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
