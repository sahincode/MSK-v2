@model IEnumerable<SettingGetDto>
@{
    int counter = 0;
}
@section cssLinks{
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/sweetalert2/11.10.1/sweetalert2.min.css" />
}
    <style>
        .header {
            display: flex;
            align-items: center;
            justify-content: space-between;
            margin-bottom: 15px;
        }
    </style>
    <div class="container-fluid">
        <div class="header">
            <h1>Settings Table </h1>
            
        </div>
        <table class="table table-striped shadow">
            <thead>
                <tr>
                    <th scope="col">No</th>
                    <th scope="col">Key</th>
                    <th scope="col">Value</th>


                </tr>
            </thead>
            <tbody>
            @foreach (var chef in Model)
            {
                counter++;
                <tr>
                    <th scope="row">@counter</th>
                    <td>@chef.Key</td>
                    <td>@chef.Value</td>

                    <td>
                        <a asp-action="update" asp-controller="setting" asp-route-id="@chef.Id" class="btn btn-success">Update</a>
                        <a asp-action="toggledelete" asp-controller="setting" asp-route-id="@chef.Id" class="btn @(chef.IsDeleted ? "btn-success":"btn-danger")">Toggle Delete</a>

                        <a asp-action="Delete" asp-controller="setting" asp-route-id="@chef.Id" class="btn btn-danger delete-btn">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section jsLinks{
    <script src="~/admin/js/main.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert2/11.10.1/sweetalert2.min.js"></script>
}
