@model ReferendumCreateDto
@{
    var selectDecision = (SelectList)ViewData["decisions"];
    var selectinfos = (SelectList)ViewData["infos"];
    var selectInstruction = (SelectList)ViewData["instructions"];
    var selectCalendar = (SelectList)ViewData["calendarPlans"];

}
<div class="container-fluid">
    <div class="table-title text-white  d-block d-sm-flex">
        <div>
            <h1 class="title"> Election <span>@ViewData["Title"]</span></h1>
        </div>
        <div>
            <a class="btn btn-success create-btn" style="min-width:150px !important;" asp-action="Index">Back to List</a>
        </div>
    </div>

    <form method="post" class="row" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group col-lg-7 col-xl-8 ">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group col-lg-3 col-xl-4">
            <label asp-for="DecisionId" class="control-label">Decision</label>
            <select asp-for="DecisionId" asp-items="@selectDecision"> </select>
            <span asp-validation-for="DecisionId" class="text-danger"></span>
        </div>
        <div class="form-group col-lg-3 col-xl-4 ">
            <label asp-for="InstructionId" class="control-label">Instruction</label>
            <select asp-for="InstructionId" asp-items="@selectInstruction"> </select>
            <span asp-validation-for="InstructionId" class="text-danger"></span>
        </div>

        <div class="form-group col-lg-3 col-xl-4 ">
            <label asp-for="CalendarPlanId" class="control-label"> Calendar Plan</label>
            <select asp-for="CalendarPlanId" asp-items="@selectCalendar"> </select>
            <span asp-validation-for="CalendarPlanId" class="text-danger"></span>
        </div>
       
        <div class="form-group col-lg-7 col-xl-8 ">
            <input type="submit" value="Update" class="btn btn-primary" />
        </div>
    </form>
</div>


@{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
