@model ElectionUpdateDto

@{
   
    var selectDecision = (SelectList)ViewData["decisions"];
    var selectinfos = (SelectList)ViewData["infos"];
    var selectInstruction = (SelectList)ViewData["instructions"];
    var selectCalendar = (SelectList)ViewData["calendarPlans"];
}
<style>
    .table-title {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 15px 40px;
        background-color: #435d7d !important;
    }

        .table-title .title {
            font-weight: 700;
        }

        .table-title span {
            font-weight: 300;
        }

    .create-btn {
        width: 110px;
    }

</style>
<div class="container-fluid">
    <div class="table-title text-white  d-block d-sm-flex">
        <div>
            <h1 class="title"> Election <span>@ViewData["Title"]</span></h1>
        </div>
        <div class="back-to-list">
            <a class="btn btn-success " title="back to list" asp-action="Index"><i class="fa-solid fa-list"></i></a>
        </div>
    </div>

   <div class="container shadow form-container mt-5">
        <form method="post"  enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group col-lg-7 col-xl-8 ">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group col-lg-7 col-xl-8 ">
                <label asp-for="StartDate" class="control-label"></label>
                <input asp-for="StartDate" class="form-control" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="form-group col-lg-3 col-xl-4">
                <label asp-for="DecisionId" class="control-label">Decision</label>
                <select asp-for="DecisionId" asp-items="@selectDecision"> </select>
                <span asp-validation-for="DecisionId" class="text-danger"></span>
            </div>
            <div class="form-group col-lg-3 col-xl-4 ">
                <label asp-for="InstructionId" class="control-label">Instruction</label>
                <select asp-for="InstructionId" asp-items="@selectInstruction"> </select>
                <span asp-validation-for="InstructionId" class="text-danger"></span>
            </div>

            <div class="form-group col-lg-3 col-xl-4 ">
                <label asp-for="CalendarPlanId" class="control-label"> Calendar Plan</label>
                <select asp-for="CalendarPlanId" asp-items="@selectCalendar"> </select>
                <span asp-validation-for="CalendarPlanId" class="text-danger"></span>
            </div>
            <div class="form-group col-lg-3 col-xl-4 ">
                <label asp-for="VotersCount" class="control-label"> VotersCount</label>
                <input asp-for="VotersCount" class="form-control" />
                <span asp-validation-for="VotersCount" class="text-danger"></span>
            </div>
            <div class="form-group col-lg-7 col-xl-8 ">
                <input type="submit" value="Update" class="btn btn-primary" />
            </div>
        </form>
   </div>

</div>

@{
    await Html.RenderPartialAsync("_ValidationScriptsPartial", true);
}

@{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
