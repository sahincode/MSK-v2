            </div>
        </div>
    </div>
</section>

<!-- news -->
<section class="mf-news">
    <div class="container">
        <div class="mf-block-header d-flex">
            <h2 class="mf-title me-auto">Press-release</h2>
            <div class="mf-news-more d-flex align-items-center"><a href="/en/news" class="btn btn-primary">All news</a></div>
        </div>
        <div class="row">
            <div class="col-sm-12 col-md-12 col-lg-7 d-flex flex-row">
                <article class="article-item">
                    <div class="article-img"><img src="~/assets/img/pressnew/@Model.PressNewLayoutDtos[0].ImageUrl" alt=""></div>
                    <div class="article-content">
                        <h4>@Model.PressNewLayoutDtos[0].Title</h4>
                        <p>@Model.PressNewLayoutDtos[0].Description</p>
                        <time>@Model.PressNewLayoutDtos[0].CreationTime.ToString("dd MMMM yyyy HH:mm")</time>
                    </div>
                    <a href="/en/news/view/1255" class="mf-link"></a>
                </article>
            </div>
            <div class="col-sm-12 col-md-12 col-lg-5 d-flex">
                <div class="list-news d-flex flex-column">
                    @for(int i = 1; i < Model.PressNewLayoutDtos.Count; i++)
                    {
                        <article data-image="~/assets/img/pressnew/@Model.PressNewLayoutDtos[i].ImageUrl" class="active">
                            <h4>@Model.PressNewLayoutDtos[i].Title</h4>
                            <p>@Model.PressNewLayoutDtos[i].Description</p>
                            <time>@Model.PressNewLayoutDtos[i].CreationTime.ToString("dd MMMM yyyy HH:mm")</time>
                            <a href="/en/news/view/1255" class="mf-link"></a>
                        </article>
                    }

                </div>
            </div>
        </div>
    </div>
</section>



