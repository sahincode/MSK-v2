@model List<InstructionLayoutDto>
<section class="mf-breadcrumb">
    <div class="container">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="home" asp-action="index">Home</a></li>

                <li class="breadcrumb-item active " aria-current="page">Instructions</li>
            </ol>
        </nav>
    </div>
</section>
<section class="main-content">
    <div class="container">
        <div class="row">

            <div class="col-lg-12">

                <div class="page-inner">
                    <h3>Instructions</h3>
                    <div class="page-inner-items">
                        @foreach (var item in Model)
                        {
                            <div class="page-post-item">
                                <p class="post-title">
                                    <a asp-action="instruction" asp-controller="instruction" asp-route-id="@item.Id" class="link-more">@item.Name</a>
                                </p>
                            </div>
                        }
                    </div>
                </div>

            </div>

        </div>
    </div>
</section>